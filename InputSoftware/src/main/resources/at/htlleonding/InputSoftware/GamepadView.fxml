                    </HBox.margin></Button>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Backward: " />
                <Button fx:id="backwardButton" onAction="#changeKeybinding" text="Change" />
            </HBox>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets left="10.0" />
            </padding>
        </VBox>
    </left>
